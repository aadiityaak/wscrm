# Laravel .htaccess untuk Package Deployment dengan Installer Support
<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Handle X-XSRF-Token Header
    RewriteCond %{HTTP:x-xsrf-token} .
    RewriteRule .* - [E=HTTP_X_XSRF_TOKEN:%{HTTP:X-XSRF-Token}]

    # ========================================
    # INSTALLER SUPPORT - ALLOW BEFORE RESTRICTIONS
    # ========================================
    
    # Allow full access to installer directory and files
    RewriteCond %{REQUEST_URI} ^/install/
    RewriteRule .* - [L]
    
    # Allow debug.php for troubleshooting
    RewriteCond %{REQUEST_URI} ^/debug\.php
    RewriteRule .* - [L]
    
    # ========================================
    # LARAVEL ROUTING - ONLY AFTER INSTALLER
    # ========================================

    # Redirect Trailing Slashes If Not A Folder...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # Send Requests To Front Controller...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>

# ========================================
# SECURITY PROTECTION - BUT INSTALLER FRIENDLY
# ========================================

# Block access to sensitive Laravel files
<FilesMatch "^(\.env|\.env\..*|\.git.*|composer\.(json|lock)|package\.(json|lock)|artisan|phpunit\.xml)$">
    Require all denied
</FilesMatch>

# Block akses ke Laravel directories TAPI IZINKAN INSTALLER
<IfModule mod_rewrite.c>
    # SKIP restrictions for installer URLs
    RewriteCond %{REQUEST_URI} ^/install/ [OR]
    RewriteCond %{REQUEST_URI} ^/debug\.php
    RewriteRule .* - [S=10]
    
    # Block Laravel directories (hanya setelah installer selesai)
    RewriteRule ^(app|bootstrap|config|database|resources|routes|storage|tests|vendor)(/.*)?$ - [F,L]
    
    # Block WSCRM directory dari direct access (Laravel files ada di sini)
    RewriteRule ^wscrm(/.*)?$ - [F,L]
    
    # Block node_modules dan dist folders
    RewriteRule ^(node_modules|dist)(/.*)?$ - [F,L]
    
    # Block other PHP files KECUALI index.php dan installer
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteCond %{REQUEST_URI} ^/[^/]+\.php$
    RewriteCond %{REQUEST_URI} !^/(index\.php|debug\.php)$
    RewriteRule .* - [F,L]
</IfModule>

# Block access ke file types yang sensitive TAPI IZINKAN di installer
<LocationMatch "^/install/">
    # Allow installer to access any file type it needs
</LocationMatch>

<FilesMatch "\.(md|txt|log|ini|conf|cfg|sql|sqlite|lock|yaml|yml)$">
    <LocationMatch "^/install/">
        Require all granted
    </LocationMatch>
    
    # Block for non-installer locations
    Require all denied
</FilesMatch>

# ========================================
# PERFORMANCE & SECURITY HEADERS
# ========================================

# Security Headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options SAMEORIGIN
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Less restrictive untuk installer
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

# Disable server signature
ServerTokens Prod
ServerSignature Off

# Disable directory browsing KECUALI installer butuh
Options -Indexes

# Block version control directories
<DirectoryMatch "\.(git|svn)">
    Require all denied
</DirectoryMatch>

# Set proper MIME types
<IfModule mod_mime.c>
    AddType application/javascript .js
    AddType text/css .css
</IfModule>

# ========================================
# PERFORMANCE OPTIMIZATION
# ========================================

# Gzip compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Cache static files (ringan untuk installer)
<IfModule mod_expires.c>
    ExpiresActive on
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
</IfModule>